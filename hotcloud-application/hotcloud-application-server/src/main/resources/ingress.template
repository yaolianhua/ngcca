apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: #{[ INGRESS_NAME ]}
  namespace: #{[ NAMESPACE ]}
  annotations:
    nginx.ingress.kubernetes.io/rewrite-target: /
    ingressclass.kubernetes.io/is-default-class: "true"
spec:
  rules:
    - host: #{[ HOST ]}
      http:
        paths:
          - path: #{[ PATH ]}
            pathType: Prefix
            backend:
              service:
                name: #{[ SERVICE_NAME ]}
                port:
                  number: #{[ SERVICE_PORT ]}